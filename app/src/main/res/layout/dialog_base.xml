<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        style="@style/CardNormal"
        android:layout_margin="@dimen/no_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            android:padding="@dimen/margin_medium">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/titleDialog"
                style="@style/headerHkBoldTextView"
                android:layout_gravity="center_horizontal"
                android:text="@string/label_error"
                android:textStyle="bold"
                android:textSize="@dimen/text_large" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/descriptionDialog"
                style="@style/mediumHkBoldTextView"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium"
                android:text="@string/label_something_when_wrong"
                android:layout_width="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/cancelButton"
                    style="@style/mediumHkBoldTextView"
                    android:layout_height="32dp"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/black"
                    android:text="@string/label_cancel"
                    android:textSize="@dimen/text_medium" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/okButton"
                    style="@style/mediumHkBoldTextView"
                    android:layout_height="32dp"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_background_primary"
                    android:text="@string/label_ok"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_medium" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>